<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:maps="com.uralys.tribes.eventmaps.*" 
			   creationComplete="init()">
	
	<fx:Script>
		<![CDATA[
			import com.uralys.tribes.constants.Session;
			import com.uralys.tribes.core.Pager;
			import com.uralys.tribes.pages.Login;
			import com.uralys.tribes.pages.Map;
			
			private function init():void{
				Pager.getInstance().window = window;
				Pager.getInstance().goToPage(Login);
			}
		]]>
	</fx:Script>
	<s:VGroup width="100%">
		<s:HGroup width="100%">
			<mx:Spacer width="100%"/>
			<s:Label text="{Session.profil ? 'Logged as : '+ Session.profil.email : 'Please log in'}"/>
		</s:HGroup>	
		<mx:HRule width="100%"/>
		<s:Group id="window"/>
	</s:VGroup>
</s:Application>
