				if(initDone) // appel a init plein de fois ???!!
					return;
				
				initDone = true;

				timer = new Timer(41,1);
				timer.addEventListener(TimerEvent.TIMER_COMPLETE, moveStoppedDuringDragging);

				
				limitLeft = 500-image.width;
				limitUp = 500-image.height;
				
				initBoard();
				
