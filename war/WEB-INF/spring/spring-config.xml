<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<!-- ============================================================================================================================== -->
	<!--  (MainDao) -->
	
	<bean id="mainDao" class="com.uralys.tribes.dao.impl.MainDAO"/>

	<!--  end of MainDao -->
	<!-- ============================================================================================================================== -->
	<!--  (InitDao) -->
	
	<bean id="initDao" 
			class="com.uralys.tribes.dao.impl.InitDAO"
			parent="mainDao"/>
	
	<!--  end of InitDao -->
	<!-- ============================================================================================================================== -->
	<!--  (PlayerService) -->
		
	<bean id="playerDao" 
		class="com.uralys.tribes.dao.impl.PlayerDAO"
		parent="mainDao"/>

	<bean id="playerDomain" class="com.uralys.tribes.domain.impl.PlayerManager">
		<constructor-arg index="0">
			<ref bean="playerDao" />
		</constructor-arg>
	</bean>
	
	<bean id="playerServiceBean" 
		class="com.uralys.tribes.services.impl.PlayerService">
		<constructor-arg index="0">
			<ref bean="playerDomain" />
		</constructor-arg>
	</bean>
	
	<!--  end of PlayerService -->
	<!-- ============================================================================================================================== -->
	<!--  (GameService) -->
		
	<bean id="gameDao" 
		class="com.uralys.tribes.dao.impl.GameDAO"
		parent="mainDao"/>

	<bean id="gameDomain" class="com.uralys.tribes.domain.impl.GameManager">
		<constructor-arg index="0">
			<ref bean="gameDao" />
		</constructor-arg>
	</bean>
	
	<bean id="gameServiceBean" 
		class="com.uralys.tribes.services.impl.GameService">
		<constructor-arg index="0">
			<ref bean="gameDomain" />
		</constructor-arg>
	</bean>
	
	<!--  end of GameService -->
	<!-- ============================================================================================================================== -->

</beans>