<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import com.uralys.tribes.core.Pager;
			import com.uralys.tribes.entities.Game;
			import com.uralys.tribes.managers.GameManager;
			
			import mx.utils.ObjectUtil;
			
			[Bindable] public var game:Game;
			
			public function set params(args:Array):void{
				game = args [0];
			}
			
			//-----------------------------------------------------------//
			
			private function back():void{
				Pager.getInstance().goToPage(Home);
			}	

			private function launchGame():void{
				
			}	
		]]>
	</fx:Script>
	<s:VGroup horizontalAlign="center">
		<s:HGroup>
			<s:Label text="Nom : "/>
			<s:Label id="labelGameName" text="{game.name}"/>
		</s:HGroup>
		<s:Label text="Liste des joueurs inscrits"/>
		<s:List id="playerList" 
				borderVisible="false" 
				height="157" 
				width="160" 
				itemRenderer="com.uralys.renderers.PlayerListRenderer"
				dataProvider="{game.players}"/>
		<s:HGroup>
			<s:Label text="Fin de tours automatique : "/>
			<s:Label text="{game.getPeriod()}"/>
		</s:HGroup>
		<s:HGroup>
			<s:Button label="Lancer la partie" click="launchGame()" enabled="{game.players.length > 1}"/>
			<s:Button label="Retour" click="back()"/>
		</s:HGroup>			
	</s:VGroup>
</s:Group>
