<?xml version="1.0" encoding="utf-8"?>
<windows:ResizableTitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:windows="com.uralys.tribes.windows.*"
			   skinClass="com.uralys.tribes.skins.WindowSkin"
			   close="{closeWindow()}"
			   width="340"
			   height="560"
			   backgroundAlpha="0.7"
			   backgroundColor="#000000"
			   cornerRadius="15"
			   >
	
	
	<fx:Script>
		<![CDATA[
			import com.uralys.tribes.commons.Numbers;
			import com.uralys.tribes.commons.Session;
			import com.uralys.tribes.commons.Translations;
			import com.uralys.tribes.entities.City;
			import com.uralys.tribes.managers.GameManager;
			
			import mx.controls.SWFLoader;
			import mx.events.ItemClickEvent;
			import mx.managers.PopUpManager;

			//-----------------------------------------------------------------//
			
			public var playerUID:String;
			
			//-----------------------------------------------------------------//

			private var loadingFlash:SWFLoader;

			//-----------------------------------------------------------------//
			
			public function closeWindow():void{
				PopUpManager.removePopUp(this);
			}
			
			//-----------------------------------------------------------------//
			
			public function refresh():void{
				GameManager.getInstance().getPlayer(playerUID);
			}
			
			//-----------------------------------------------------------//
			
			protected function initCitiesList():void{
				citiesList.addEventListener(ItemClickEvent.ITEM_CLICK, onCityClick);
			}
			
			protected function initUnitsList():void{
				unitsList.addEventListener(ItemClickEvent.ITEM_CLICK, onUnitClick);
			}			
			
			//---------------------------------------------------------------------------------------------------//
			// click sur une ville dans la barre laterale
			protected function onCityClick(event:ItemClickEvent):void
			{
				if(Session.LOGGED_IN)
					Session.board.onCityClick(event);
			}
			
			// click sur une unitÃ© dans la barre laterale
			protected function onUnitClick(event:ItemClickEvent):void
			{
				if(Session.LOGGED_IN)
					Session.board.onMyUnitClick(event);
			}
		]]>
	</fx:Script>
	
	<s:Group width="100%" height="100%">
		
		<s:VGroup horizontalAlign="center" top="5" width="100%">
			<mx:SWFLoader source="{ImageContainer.LOADING}" 
						  visible="{Session.WAIT_FOR_SERVER}"/>
			<s:Label text="{Session.playerLoaded.name}" color="#ffffff"/>
			<s:Label text="{Session.playerLoaded.profile}" color="#ffffff"/>
			
			<s:Label text="{Translations.CITIES.getItemAt(Session.LANGUAGE)}"
					 color="#ffffff"/>
			<s:Scroller height="200">
				<s:Group>
					<s:List id="citiesList"
							itemRenderer="com.uralys.tribes.renderers.CityListRenderer"
							dataProvider="{Session.playerLoaded.cities}"
							borderVisible="false"
							width="240"
							contentBackgroundAlpha="0"
							creationComplete="initCitiesList()">
						<s:layout>
							<s:VerticalLayout gap="1" useVirtualLayout="true" />
						</s:layout>
					</s:List>
				</s:Group>
			</s:Scroller>
			<s:Label text="{Translations.UNITS.getItemAt(Session.LANGUAGE)}"
					 visible="{Session.player.units.length > 0}"
					 color="#ffffff"/>
			<s:Scroller height="200">
				<s:Group>
					<s:List id="unitsList"
							itemRenderer="com.uralys.tribes.renderers.UnitListRenderer"
							dataProvider="{Session.playerLoaded.units}"
							borderVisible="false"
							width="240"
							contentBackgroundAlpha="0"
							creationComplete="initUnitsList()">
						<s:layout>
							<s:VerticalLayout gap="1" useVirtualLayout="true" />
						</s:layout>
					</s:List>
				</s:Group>
			</s:Scroller>
		</s:VGroup>
		
	</s:Group>
	
</windows:ResizableTitleWindow>
