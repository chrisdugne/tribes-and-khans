<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	
	<servlet>
		<servlet-name>DataviewerServer</servlet-name>
		<servlet-class>com.uralys.tribes.servlets.DataviewerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DataviewerServer</servlet-name>
		<url-pattern>/dataviewer</url-pattern>
	</servlet-mapping>
	
	
	<!-- Spring -->
	<context-param>
	        <param-name>contextConfigLocation</param-name>
	        <param-value>WEB-INF/spring/application-context.xml,WEB-INF/spring/spring-config.xml</param-value>
	</context-param>
	<listener>
	        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
        <servlet-name>testdrive</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>testdrive</servlet-name>
		<url-pattern>/messagebroker/*</url-pattern>
	</servlet-mapping>

    <listener>
        <listener-class>flex.messaging.HttpFlexSession</listener-class>
    </listener> 
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
<!--OnPositive Tools-->
<servlet>
		<servlet-name>profilerServlet</servlet-name>
		<servlet-class>com.onpositive.gae.tools.servlets.ProfilerServlet</servlet-class>
</servlet>
<servlet-mapping>
		<servlet-name>profilerServlet</servlet-name>
		<url-pattern>/appwrench/profiler</url-pattern>
</servlet-mapping>
<filter id="profilerFilter">
	 <filter-name>profileJsp</filter-name>
     <filter-class>com.onpositive.gae.tools.servlets.JSPFilter</filter-class>
</filter>
<filter-mapping>
        <filter-name>profileJsp</filter-name>
        <url-pattern>*.jsp</url-pattern>
</filter-mapping>
<servlet>
<servlet-name>SessionAuth</servlet-name>
<servlet-class>com.onpositive.auth.AuthServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>SessionAuth</servlet-name>
<url-pattern>/appwrench/auth</url-pattern>
</servlet-mapping>
<servlet>
		<servlet-name>profilerConsoleServlet</servlet-name>
		<servlet-class>com.onpositive.gae.tools.servlets.ConsoleServlet
		</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>profilerConsoleServlet</servlet-name>
		<url-pattern>/appwrench/console</url-pattern>
	</servlet-mapping>
</web-app>
